<div class="column">
  Permit: <%= @permit.suit %> + <%= @permit.face %></br />
  Next: <%= @next %><br />
  <%= if @selectable do %>
    <%= form_for(@conn, Routes.game_path(@conn, :advance), [method: :put, class: "form-inline"], fn f -> %>
      <%= hidden_input(f, :action, value: @value) %>
      <%= submit "Select", class: "button-small" %>
    <% end) %>
  <% end %>
</div>
